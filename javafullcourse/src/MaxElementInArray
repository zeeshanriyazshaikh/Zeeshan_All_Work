#MAX ELEMENT IN ARRAY
int[] arr = {10, 5, 28, 20, 15};
int max = arr[0];                      // Assume the first element as the maximum

  for (int i = 1; i < arr.length; i++) {
            if (arr[i] > max) {
                max = arr[i]; // Update max if a larger element is found
            }
        }

